<Page
    x:Class="TestverktygProject.View.CreateExam"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:TestverktygProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="[data ]using:TestverktygProject.Model"
    xmlns:local="using:TestverktygProject.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:TestverktygProject.Model"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Pivot Title="Create exam">
            <PivotItem Header="Basic information">

                <StackPanel>
                    <TextBlock Text="How many questions do you want?" />
                    <TextBox Name="NumberOfQuestionsToGenerateField" PlaceholderText="10 for example" />
                    <TextBlock Name="SubjectLabel" Text="Subject:" />
                    <TextBox Name="SubjectField" PlaceholderText="Math, for example" />
                    <TextBlock Name="TitleOfExam" Text="Title of the Exam:" />
                    <TextBox Name="TitleOfExamField" PlaceholderText="Math exam 1, for example..." />
                    <Button
                        Name="BeforeCreationOfExamInfoButton"
                        HorizontalAlignment="Right"
                        Click="BeforeCreationOfExamInfoButton_OnClick"
                        Content="Submit" />

                </StackPanel>


            </PivotItem>
            <PivotItem Header="Create questions">
                <ScrollViewer VerticalScrollBarVisibility="Visible" VerticalScrollMode="Enabled">
                    <StackPanel>
                        <ListView x:Name="QuestionsToBeFilledListView" ItemsSource="{x:Bind CreateExamViewModel.QuestionsToBeFilled}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="model:Question">
                                    <StackPanel
                                        x:Name="CreateQuestionsStackPanel"
                                        Width="500"
                                        Margin="0,0,0,50"
                                        Padding="10">
                                        <TextBox
                                            x:Name="TitleOfQuestion"
                                            Padding="10"
                                            PlaceholderText="Title of Question"
                                            Text="{Binding QuestionTitle, Mode=TwoWay}" />
                                        <TextBox
                                            x:Name="Alt1"
                                            Padding="10"
                                            PlaceholderText="Alternative 1"
                                            Text="{Binding Alternatives[0], Mode=TwoWay}" />
                                        <TextBox
                                            x:Name="Alt2"
                                            Padding="10"
                                            PlaceholderText="Alternative 2"
                                            Text="{Binding Alternatives[1], Mode=TwoWay}" />
                                        <TextBox
                                            x:Name="Alt3"
                                            Padding="10"
                                            PlaceholderText="Alternative 3"
                                            Text="{Binding Alternatives[2], Mode=TwoWay}" />
                                        <TextBox
                                            x:Name="Alt4"
                                            Padding="10"
                                            PlaceholderText="Alternative 4"
                                            Text="{Binding Alternatives[3], Mode=TwoWay}" />
                                        <TextBlock
                                            x:Name="CorrectAnswerLabel"
                                            HorizontalAlignment="Left"
                                            Text="The right answer is: " />
                                        <TextBox
                                            x:Name="CorrectAnswerField"
                                            HorizontalAlignment="Right"
                                            Text="{Binding CorrectAnswer[0], Mode=TwoWay}" />

                                    </StackPanel>


                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <Button
                            x:Name="SubmitQuestionButton"
                            Margin="10"
                            Padding="10"
                            HorizontalAlignment="Left"
                            Click="SubmitQuestionButton_OnClick"
                            Content="Submit Questions" />
                    </StackPanel>
                </ScrollViewer>

            </PivotItem>
            <PivotItem Header="Preview exam">
                <ScrollViewer>
                <StackPanel>
                    <ListView x:Name="NotYetCreatedExamListView" ItemsSource="{x:Bind CreateExamViewModel.CreatedQuestions}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:Question">
                                <StackPanel
                                    x:Name="CreatedQuestions"
                                    Width="500"
                                    Margin="0,0,0,50"
                                    Padding="10">
                                    <TextBox
                                        x:Name="TitleOfQuestion"
                                        Padding="10"
                                        PlaceholderText="Enter the title of the question here"
                                        Text="{Binding QuestionTitle, Mode=TwoWay}" />
                                    <TextBox
                                        x:Name="Alt1"
                                        Padding="10"
                                        PlaceholderText="Write an answer here..."
                                        Text="{Binding Alternatives[0], Mode=TwoWay}" />
                                    <TextBox
                                        x:Name="Alt2"
                                        Padding="10"
                                        PlaceholderText="Write an answer here..."
                                        Text="{Binding Alternatives[1], Mode=TwoWay}" />
                                    <TextBox
                                        x:Name="Alt3"
                                        Padding="10"
                                        PlaceholderText="Write an answer here..."
                                        Text="{Binding Alternatives[2], Mode=TwoWay}" />
                                    <TextBox
                                        x:Name="Alt4"
                                        Padding="10"
                                        PlaceholderText="Write an answer here..."
                                        Text="{Binding Alternatives[3], Mode=TwoWay}" />

                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel>
                        <Button
                            Name="CreateExamButton"
                            Click="CreateExamButton_OnClick"
                            Content="Create exam" />
                    </StackPanel>
                    </StackPanel>
                </ScrollViewer>

            </PivotItem>
            <PivotItem Header="View created exam">
                <ScrollViewer>
                <StackPanel>
                    <ListView x:Name="SeeCreatedExamListView" ItemsSource="{x:Bind CreateExamViewModel.ExamList}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:Exam">
                                <StackPanel>
                                    <TextBlock x:Name="ExamTitle" Text="{Binding ExamName}" />
                                    <TextBlock x:Name="DateOfExam" Text="{Binding ExamDate}" />
                                    <TextBlock Name="QuestionTitleFieldCreated" Text="{Binding ExamName, Mode=TwoWay}" />
                                    <RadioButton Name="opt1" Content="{Binding Questions, Mode=TwoWay}" />
                                    <!--><RadioButton Name="opt2" Content="{Binding Alternatives[1], Mode=TwoWay}"/>
                                <RadioButton Name="opt3" Content="{Binding Alternatives[2], Mode=TwoWay}"/>
                                <RadioButton Name="opt4"  Content="{Binding Alternatives[3], Mode=TwoWay}"/>-->

                                </StackPanel>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                </StackPanel>
                </ScrollViewer>

            </PivotItem>
        </Pivot>
    </Grid>
</Page>
